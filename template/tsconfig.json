{
    "include": ["./src/**/*.ts", "App.ts", "**/*.ts"],
    "exclude": ["./dist"],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "allowImportingTsExtensions": true
}
